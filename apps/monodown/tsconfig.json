{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "types": ["vite-plugin-solid-svg/types-component-solid", "solid-start/env"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    // causes ts issues in uno/vite config.ts
    "declaration": false,
    "declarationMap": false
  }
}
